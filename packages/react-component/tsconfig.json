{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "allowJs": false,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
  ]
}
